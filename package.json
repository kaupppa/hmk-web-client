{
  "name": "hmk-web-client",
  "version": "1.0.0",
  "description": "Web client based on Angular 2 and Webpack",
  "author": "Pauli Kauppinen",
  "license": "MIT",
  "homepage": "https://github.com/kaupppa/hmk-web-client",
  "scripts": {
    "rimraf": "rimraf",
    "tslint": "tslint",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "clean": "npm cache clean && npm run rimraf -- node_modules coverage dist",
    "clean:dist": "npm run rimraf -- dist",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm install",
    "preclean:start": "npm run clean",
    "clean:start": "npm start",
    "watch": "npm run watch:dev",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:prod": "npm run build:prod -- --watch",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean:dist",
    "build:dev": "webpack --config config/webpack.dev.js --progress --profile --colors ",
    "prebuild:prod": "npm run clean:dist",
    "build:prod": "webpack --config config/webpack.prod.js  --progress --profile --colors --bail",
    "server": "npm run server:dev",
    "server:dev": "webpack-dev-server --config config/webpack.dev.js --inline --progress --profile --colors --watch  --content-base src/",
    "server:prod": "http-server dist --cors",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "start": "npm run server:dev",
    "preversion": "npm test",
    "version": "npm run build"
  },
  "dependencies": {
    "@angular/animations": "^5.2.2",
    "@angular/cdk": "^5.1.1",
    "@angular/common": "5.2.2",
    "@angular/core": "5.2.2",
    "@angular/forms": "5.2.2",
    "@angular/http": "5.2.2",
    "@angular/material": "^5.1.1",
    "@angular/platform-browser": "5.2.2",
    "@angular/platform-browser-dynamic": "5.2.2",
    "@angular/router": "5.2.2",
    "core-js": "^2.4.0",
    "hammerjs": "^2.0.8",
    "ie-shim": "^0.1.0",
    "leaflet": "^1.0.1",
    "rxjs": "5.5.6",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/compiler": "^5.2.2",
    "@types/chai": "^4.1.2",
    "@types/core-js": "^0.9.34",
    "@types/hammerjs": "^2.0.33",
    "@types/node": "^9.4.0",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "codelyzer": "~4.1.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.28.9",
    "es6-promise-loader": "^1.0.1",
    "exports-loader": "^0.6.3",
    "expose-loader": "^0.7.1",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.21.0",
    "http-server": "^0.11.1",
    "imports-loader": "^0.7.0",
    "json-loader": "^0.5.4",
    "parse5": "^4.0.0",
    "raw-loader": "0.5.1",
    "rimraf": "^2.5.4",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.20.1",
    "to-string-loader": "^1.1.4",
    "ts-helpers": "1.1.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.3.0",
    "typescript": "~2.6.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-md5-hash": "^0.0.6",
    "webpack-merge": "^4.1.1"
  },
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaupppa/hmk-web-client.git"
  }
}
